@model IEnumerable<LinkLogger.DataAccess.Link>

@{
    ViewBag.Title = "Links";
}

<h2>@ViewBag.Title</h2>

<!-- ko if: loadingLinks -->
<div class="well" >Loading content, please wait.</div>
<!-- /ko -->

<table class="table" data-bind="visible: !loadingLinks()">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Channel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisteredAt)
            </th>
        </tr>
    </thead>
    <tbody data-bind="foreach: links">
        <tr>
            <td><a data-bind="attr: {href: url}, text: url" target="_blank"></a></td>
            <td><span data-bind="text: user"> </span></td>
            <td><span data-bind="text: channel"> </span></td>
            <td><span data-bind="text: postedAt"> </span></td>
        </tr>
    </tbody>
</table>